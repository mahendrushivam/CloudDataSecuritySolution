<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <it.michelelacorte.elasticprogressbar.ElasticDownloadView
        android:id="@+id/elastic_download_view"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
android:background="#617cdc"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:paddingTop="10dp"
        android:background="#ffffff"
        android:orientation="horizontal">
        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:id="@+id/diallogbtn"
            android:layout_marginLeft="30dp"
            android:drawableLeft="@drawable/logicon1"
            android:textColor="#54608f"
            android:paddingLeft="6dp"
            android:fontFamily="sans-serif"
            android:background="@drawable/textviewbackground2"
            android:text="Logs"

            android:textSize="20dp"
            android:textAllCaps="false"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:id="@+id/dialcancelbtn"
            android:layout_marginLeft="15dp"
            android:text="Cancel"
            android:textColor="#54608f"
            android:paddingLeft="5dp"
            android:drawableLeft="@drawable/cancelicon"
            android:background="@drawable/textviewbackground2"
            android:textSize="20dp"
            android:textAllCaps="false"/>

    </LinearLayout>
</LinearLayout>