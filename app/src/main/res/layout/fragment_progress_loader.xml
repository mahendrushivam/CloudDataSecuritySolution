<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#bfc2c2"
    android:layout_height="match_parent"
    tools:context="com.example.shivam.datcompressorfinal.ProgressLoader">

    <!-- TODO: Update blank fragment layout -->

    <me.itangqi.waveloadingview.WaveLoadingView
        android:id="@+id/waveLoadingView"
        android:layout_gravity="center_vertical|left|right"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"
        app:wlv_borderColor="@color/colorAccent"
        app:wlv_borderWidth="3dp"
        app:wlv_progressValue="40"
        app:wlv_shapeType="circle"
        app:wlv_round_rectangle="true"
        app:wlv_triangle_direction="north"
        app:wlv_titleCenterStrokeColor="@android:color/holo_blue_dark"
        app:wlv_titleCenterStrokeWidth="3dp"
        app:wlv_titleCenterColor="@android:color/white"
        app:wlv_titleCenterSize="20sp"
        app:wlv_waveAmplitude="120"
        app:wlv_waveColor="@color/colorAccent"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="#6e97e2"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/tv_shape_type"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:drawableLeft="@drawable/shapeicon"
                android:background="@drawable/addcloudbtnback2"
                android:paddingLeft="15dp"
                android:textAllCaps="false"
                android:fontFamily="serif"
                android:textSize="17dp"
                android:text="Shape Type"

                android:textColor="@color/colorPrimary"/>




            <Button
                android:id="@+id/tv_animator"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/tv_shape_type"
                android:background="@drawable/addcloudbtnback2"
                android:paddingLeft="15dp"
                android:drawableLeft="@drawable/animation"
                android:textAllCaps="false"
                android:textSize="17dp"
                android:layout_marginTop="20dp"
                android:fontFamily="serif"
                android:text="Animation Effects"
                android:textColor="@color/colorPrimary"/>





            <Button
                android:id="@+id/border_width"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/tv_animator"
                android:textSize="17dp"
                android:fontFamily="serif"
                android:drawableLeft="@drawable/borderwidth"
                android:paddingTop="3dp"
                android:background="@drawable/addcloudbtnback2"
                android:paddingLeft="15dp"
                android:textAllCaps="false"
                android:text="Border width"
                android:textColor="@color/colorPrimary"/>



            <Button
                android:id="@+id/tv_amplitude"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textAllCaps="false"
                android:textSize="17dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/addcloudbtnback2"
                android:paddingLeft="15dp"
                android:fontFamily="serif"
                android:layout_below="@+id/border_width"
                android:drawableLeft="@drawable/waveamp"
                android:text="Amplitude"
                android:textColor="@color/colorPrimary"/>



            <Button
                android:id="@+id/tv_wave_color"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textAllCaps="false"
                android:textSize="17dp"
                android:layout_marginTop="15dp"
                android:fontFamily="serif"
                android:background="@drawable/addcloudbtnback2"
                android:paddingLeft="15dp"
                android:layout_below="@+id/tv_amplitude"
                android:drawableLeft="@drawable/wave"
                android:text="Wave Color"
                android:textColor="@color/colorPrimary"/>



            <Button
                android:id="@+id/tv_wave_background_color"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:drawableLeft="@drawable/backgroundicon"
                android:background="@drawable/addcloudbtnback2"
                android:paddingLeft="15dp"
                android:fontFamily="serif"
                android:layout_below="@+id/tv_wave_color"
                android:layout_marginTop="15dp"
                android:textAllCaps="false"
                android:textSize="17dp"
                android:text="Background Color"
                android:textColor="@color/colorPrimary"/>



            <Button
                android:id="@+id/tv_border_color"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:textSize="17dp"
                android:fontFamily="serif"
                android:background="@drawable/addcloudbtnback2"
                android:paddingLeft="15dp"
                android:layout_below="@+id/tv_wave_background_color"
                android:drawableLeft="@drawable/bordericon"
                android:textAllCaps="false"
                android:text="Border Color"
                android:textColor="@color/colorPrimary"/>



        </RelativeLayout>
    </ScrollView>
</LinearLayout>
