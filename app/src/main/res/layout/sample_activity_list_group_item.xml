<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/sample_activity_list_group_item_image"
        android:layout_width="66dp"
        android:layout_height="56dp"
        android:paddingTop="3dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_vertical"
android:src="@drawable/iconlist"
      android:background="@drawable/customizationlistlay"
        />

    <RelativeLayout
        android:id="@+id/sample_activity_list_group_item_background"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:layout_marginTop="8dp"
        android:background="#d4e8f2"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sample_activity_list_group_item_text"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/addcloudbtnback2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:paddingLeft="15dp"
            android:paddingTop="3dp"
            android:text="Type"
            android:textColor="#819393"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/sample_activity_list_group_expanded_image"
            android:layout_width="30dp"

            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp" />
    </RelativeLayout>

</LinearLayout>