<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.example.shivam.datcompressorfinal.CloudStorageFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@drawable/cloudicon3"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Add New Account"

        android:textAllCaps="false"
        android:layout_marginTop="95dp"
        android:background="@drawable/addcloudbtnback"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="80dp"
        android:id="@+id/addcloudbtn"
        android:fontFamily="sans-serif"
        android:paddingRight="90dp"
        android:textSize="20dp"
        android:textColor="#ffffff"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#eff2f2"
        android:layout_height="match_parent">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="35dp"
        android:background="@drawable/cloudlisticon"
        android:paddingTop="15dp"
        android:id="@+id/cloudmainlistview">

    </ListView>
    </LinearLayout>
</LinearLayout>
